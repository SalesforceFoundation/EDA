/**
* @author Salesforce.org
* @date 2019
* @group Utilities
* @group-content ../../ApexDocContent/Utilities.htm
* @description Tests for UTIL_FeatureManagement class. Mainly for code coverage since you can't assert on
* System.FeatureManagement method execution.
*/
@isTest
public class UTIL_FeatureManagement_TEST {
    
    /*******************************************************************************************************
    * @description Calls setPackageBooleanValue() method in UTIL_FeatureManagement.
    ********************************************************************************************************/
    @isTest
    private static void callsSetPackageBooleanValue() {
        new UTIL_FeatureManagement().setPackageBooleanValue(
            UTIL_OrgTelemetry.TelemetryParameterName.IsEnabled_AutomaticHouseholdNaming.name(),
            false
        );
    }

    /*******************************************************************************************************
    * @description Calls setPackageIntegerValue() method in UTIL_FeatureManagement.
    ********************************************************************************************************/
    @isTest
    private static void callsSetPackageIntegerValue() {
        new UTIL_FeatureManagement().setPackageIntegerValue(
            UTIL_OrgTelemetry.TelemetryParameterName.Org_CountActiveCourseConnectionRecordTypes.name(),
            3
        );
    }

    /*******************************************************************************************************
    * @description Tests setPackageDateValue() method in UTIL_FeatureManagement.
    ********************************************************************************************************/
    @isTest
    private static void callsSetPackageDateValue() {

        UTIL_FeatureManagement featureManager = new UTIL_FeatureManagement();
        Test.startTest();
            featureManager.setPackageDateValue('SettingsHealthCheckLastRunDate', Date.valueOf('2018-1-1'));
        Test.stopTest();

        System.assertEquals(Date.valueOf('2018-1-1'), featureManager.checkPackageDateValue('SettingsHealthCheckLastRunDate'), 'Date retrieved should be the one that was set');
    }

    /*******************************************************************************************************************
    * @description Mock for UTIL_FeatureManagement instance
    */
    public class Mock implements System.StubProvider {
        public Map<String, Boolean> packageBooleanValuesByName = new Map<String, Boolean>();
        public Map<String, Integer> packageIntegerValuesByName = new Map<String, Integer>();

        public Object handleMethodCall(
            Object stubbedObject,
            String stubbedMethodName,
            Type returnType,
            List<Type> listOfParamTypes,
            List<String> listOfParamNames,
            List<Object> listOfArgs
        ) {
            switch on stubbedMethodName {
                when 'setPackageBooleanValue' {
                    packageBooleanValuesByName.put((String) listOfArgs[0], (Boolean) listOfArgs[1]);
                }

                when 'setPackageIntegerValue' {
                    packageIntegerValuesByName.put((String) listOfArgs[0], (Integer) listOfArgs[1]);
                }
            }
            return null;
        }
    }
}